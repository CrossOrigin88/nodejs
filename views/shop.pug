extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item 
                        header.card__holder 
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://upload.wikimedia.org/wikipedia/commons/b/b6/Gutenberg_Bible%2C_Lenox_Copy%2C_New_York_Public_Library%2C_2009._Pic_01.jpg" alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description Lorem Ipsum for book!!!
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No Products